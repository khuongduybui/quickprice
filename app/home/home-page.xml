<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<Page.actionBar>
		<ActionBar title="Tính Giá Nhanh" class="action-bar">
			<ActionBar.items>
				<ActionItem tap="{{ print }}" android.systemIcon="ic_menu_camera" />
			</ActionBar.items>
		</ActionBar>
	</Page.actionBar>
	<ScrollView class="body">
		<StackLayout class="form" swipe="layoutSwiped">
			<SegmentedBar selectedIndex="{{ data.category }}">
				<SegmentedBar.items>
					<SegmentedBarItem title="Nước hoa" />
					<SegmentedBarItem title="Mỹ phẩm" />
					<SegmentedBarItem title="Son" />
				</SegmentedBar.items>
			</SegmentedBar>

			<GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75">
				<Label class="h2" row="0" col="0" text="Giá" />
				<StackLayout class="input input-border" margin="0 10" padding="0 5" row="0" col="1">
					<TextField class="input" text="{{ data.price }}" keyboardType="number" margin="2 0" fontSize="20" />
				</StackLayout>
				<Label class="h2" row="0" col="2" text="USD" />
			</GridLayout>

			<GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75">
				<Label class="h2" row="0" col="0" text="Thuế" textWrap="true" />
				<Slider row="0" col="1" value="{{ data.tax }}" minValue="0" maxValue="{{ data.taxes.length - 1 }}" />
				<Label class="h2" row="0" col="2" text="{{ data.taxLabel }}" textWrap="true" />
			</GridLayout>

			<GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75" visibility="{{ data.volumeVisibility }}">
				<Label class="h2" row="0" col="0" text="Cỡ" textWrap="true" />
				<Slider row="0" col="1" value="{{ data.volume }}" minValue="0" maxValue="{{ data.volumes.length - 1 }}" />
				<Label class="h2" row="0" col="2" text="{{ data.volumeLabel }}" textWrap="true" />
			</GridLayout>

			<GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75" visibility="{{ data.sizeVisibility }}">
				<Label class="h2" row="0" col="0" text="Cỡ" textWrap="true" />
				<Slider row="0" col="1" value="{{ data.size }}" minValue="0" maxValue="{{ data.sizes.length - 1 }}" />
				<Label class="h2" row="0" col="2" text="{{ data.sizeLabel }}" textWrap="true" />
			</GridLayout>

			<Label class="h1 text-center" text="{{ data.final }}" />

			<Image src="res://logo" />
		</StackLayout>
	</ScrollView>
</Page>
