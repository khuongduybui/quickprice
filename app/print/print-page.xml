<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
  <Page.actionBar>
    <ActionBar title="Xuất hình" class="action-bar"></ActionBar>
  </Page.actionBar>

  <ScrollView class="body">
    <StackLayout class="form">
      <Label class="h1 text-primary text-center" text="{{ data.final }}" />

      <GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75">
        <Label class="h2" row="0" col="0" text="Tên" />
        <StackLayout class="input input-border" margin="0 10" padding="0 5" row="0" col="1">
          <TextField class="input" text="{{ data.name }}" margin="2 0" fontSize="20" />
        </StackLayout>
        <Label class="h2" row="0" col="2" text="" />
      </GridLayout>

      <GridLayout class="input-field input-sides" rows="auto auto" columns="60 * 75">
        <Label class="h2" row="0" col="0" text="Lời" textWrap="true" />
        <Slider row="0" col="1" value="{{ data.profit }}" minValue="0" maxValue="{{ data.profits.length - 1 }}" />
        <Label class="h2" row="0" col="2" text="{{ data.profitLabel }}" textWrap="true" />
      </GridLayout>

      <Label class="h1 text-center" text="{{ data.printValue }}" />

      <Button class="btn btn-primary" text="Chọn hình" tap="{{ print }}" />

      <Image src="res://logo" />
    </StackLayout>
  </ScrollView>
</Page>
